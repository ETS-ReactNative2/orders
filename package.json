{
  "name": "orders",
  "private": true,
  "version": "2.0.0-beta.5",
  "description": "A digital order sheet for Benchmark Monument",
  "main": "index.js",
  "config": {
    "babel": "--optional utility.inlineExpressions --optional validation.react --optional es7.classProperties",
    "browserify": "--debug -e ./index.js"
  },
  "scripts": {
    "test": "mocha",
    "prebuild": "mkdir -p dist",
    "js": "browserify -t [babelify $npm_package_config_babel] $npm_package_config_browserify | exorcist dist/app.js.map > dist/app.js",
    "js-watch": "watchify -v -t [babelify $npm_package_config_babel] -o dist/app.js $npm_package_config_browserify",
    "css": "node-sass css/index.scss dist/app.css --source-map dist/app.css.map && autoprefixer dist/app.css",
    "css-watch": "nodemon --watch css/ --ext scss --exec 'npm run css'",
    "build": "npm run js & npm run css; wait",
    "watch": "npm run js-watch & npm run css-watch; wait",
    "start": "npm run watch & browser-sync start --port=4000 --no-open --server --files='dist/*.css, dist/*.js, *.html'; wait"
  },
  "repository": "https://github.com/monument/orders",
  "keywords": [
    "benchmarkmonument",
    "orders"
  ],
  "author": "Hawken MacKay Rives",
  "license": "MIT",
  "homepage": "http://orders.benchmarkmonument.com/",
  "dependencies": {
    "Squire": "neilj/squire",
    "flummox": "^3.5.0",
    "immutable": "^3.7.1",
    "lodash": "^3.6.0",
    "react": "^0.13.1"
  },
  "devDependencies": {
    "autoprefixer": "^5.1.0",
    "babel-core": "^5.0.9",
    "babelify": "^6.0.1",
    "browser-sync": "^2.5.3",
    "browserify": "^9.0.7",
    "eslint": "^0.18.0",
    "exorcist": "^0.1.6",
    "mocha": "^2.2.1",
    "node-sass": "^2.1.1",
    "nodemon": "^1.3.7"
  }
}
