{
  "name": "orders",
  "private": true,
  "version": "2.0.0",
  "description": "A digital order sheet for Benchmark Monument",
  "main": "index.js",
  "config": {
    "browserify": "--debug -e ./index.js"
  },
  "scripts": {
    "test": "mocha",
    "prebuild": "mkdir -p dist",
    "js": "browserify -t babelify $npm_package_config_browserify | exorcist dist/app.js.map > dist/app.js",
    "js-watch": "watchify -v -t babelify -o dist/app.js $npm_package_config_browserify",
    "css": "node-sass css/index.scss dist/app.css --source-map dist/app.css.map && autoprefixer dist/app.css",
    "css-watch": "nodemon --watch css/ --ext scss --exec 'npm run css'",
    "build": "npm run js & npm run css; wait",
    "watch": "npm run js-watch & npm run css-watch; wait",
    "start": "npm run watch & browser-sync start --port=4000 --no-open --server --files='dist/*.css, dist/*.js, *.html'; wait"
  },
  "repository": "https://github.com/monument/orders",
  "keywords": [
    "benchmarkmonument",
    "orders"
  ],
  "author": "Hawken MacKay Rives",
  "license": "MIT",
  "homepage": "http://orders.benchmarkmonument.com/",
  "dependencies": {
    "flummox": "3.5.1",
    "immutable": "3.7.1",
    "intl": "0.1.4",
    "lodash": "3.6.0",
    "react": "0.13.1",
    "react-quill-editor": "0.3.6"
  },
  "devDependencies": {
    "autoprefixer": "5.1.0",
    "babel-core": "5.0.12",
    "babelify": "6.0.2",
    "browser-sync": "2.5.3",
    "browserify": "9.0.7",
    "eslint": "0.18.0",
    "exorcist": "0.1.6",
    "mocha": "2.2.4",
    "node-sass": "2.1.1",
    "nodemon": "1.3.7",
    "watchify": "3.3.1"
  }
}
